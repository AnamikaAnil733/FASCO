        font-size: 18px;
    }
    
    .add-to-wishlist-icon i.fas {
        color: #dc3545;
    }
    
    .add-to-wishlist-icon i.far {
        color: #666;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .hero-title {
            font-size: 2rem;
        }

        .hero-text {
            font-size: 1rem;
        }

        .banner-title {
            font-size: 1.75rem;
        }

        .block2-pic img {
            height: 220px;
        }
    }

    /* Price Section Styling */
    .price-section {
        display: flex;
        align-items: center;
        gap: 10px;
        flex-wrap: wrap;
		margin: 10px 0;
    }

    .current-price {
