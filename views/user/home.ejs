document.addEventListener('DOMContentLoaded', function() {
    // Handle wishlist button clicks
    document.querySelectorAll('.add-to-wishlist-icon').forEach(button => {
        button.addEventListener('click', async function(e) {
            e.preventDefault();
            
            // Check if user is logged in
            if (!<%= !!message %>) {
                Swal.fire({
                    title: 'Please Login',
                    text: 'You need to login to add items to your wishlist',
                    icon: 'info',
                    showCancelButton: true,
                    confirmButtonText: 'Login',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/login';
                    }
                });
                return;
            }

            const productId = this.dataset.productId;
            const icon = this.querySelector('i');
            
            try {
                const isInWishlist = icon.classList.contains('fas');
                let response;
                
                if (isInWishlist) {
                    // Remove from wishlist
                    response = await fetch(`/wishlist/remove/${productId}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });
                } else {
                    // Add to wishlist
                    response = await fetch('/wishlist/add', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ productId })
                    });
                }

                if (response.ok) {
                    // Toggle heart icon
                    icon.classList.toggle('far');
                    icon.classList.toggle('fas');
                    
                    // Update wishlist count
                    updateWishlistCount();
                    
                    // Show success message
                    const message = isInWishlist ? 'Product removed from wishlist' : 'Product added to wishlist';
                    Swal.fire({
                        toast: true,
                        icon: 'success',
                        title: message,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 1500
                    });
                } else {
                    throw new Error('Failed to update wishlist');
                }
            } catch (error) {
                console.error('Error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Something went wrong! Please try again.'
                });
            }
        });
    });
});
</script>

