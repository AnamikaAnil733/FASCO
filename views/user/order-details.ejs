<style>
    .order-details-section {
        padding: 140px 0 100px;
        min-height: calc(100vh - 200px);
        background-color: #f8f9fa;
    }
    
    .page-header {
        margin-bottom: 2rem;
    }
    
    .page-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #2d3436;
    }
    
    .btn-back {
        background-color: transparent;
        color: #6c5ce7;
        border: 2px solid #6c5ce7;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .btn-back:hover {
        background-color: #6c5ce7;
        color: white;
        transform: translateY(-2px);
    }
    
    .order-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 2px 20px rgba(0, 0, 0, 0.05);
        overflow: hidden;
        margin-bottom: 2rem;
    }
    
    .order-header {
        padding: 2rem;
        border-bottom: 1px solid #edf2f7;
        background-color: #f8f9fa;
    }
    
    .order-id {
        font-size: 1.5rem;
        font-weight: 700;
        color: #2d3436;
        margin-bottom: 0.5rem;
    }
    
    .order-date {
        color: #636e72;
    }
    
    .badge {
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 500;
        font-size: 0.875rem;
        letter-spacing: 0.3px;
    }
    
    .badge.delivered {
        background-color: #00b894;
        color: white;
    }
    
    .badge.processing {
        background-color: #0984e3;
        color: white;
    }
    
    .badge.cancelled {
        background-color: #d63031;
        color: white;
    }
    
    .badge.return-request {
        background-color: #fdcb6e;
        color: #2d3436;
    }
    
    .badge.returned {
        background-color: #636e72;
        color: white;
    }
    
    .order-body {
        padding: 2rem;
    }
    
    .info-section {
        margin-bottom: 3rem;
    }
    
    .info-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #2d3436;
        margin-bottom: 1.5rem;
    }
    
    .info-content {
        background-color: #f8f9fa;
        padding: 1.5rem;
        border-radius: 12px;
        line-height: 1.8;
    }
    
    .product-card {
        display: flex;
        align-items: center;
        padding: 1.5rem;
        border: 1px solid #edf2f7;
        border-radius: 12px;
        margin-bottom: 1rem;
        transition: transform 0.3s ease;
    }
    
    .product-card:hover {
        transform: translateX(5px);
    }
    
    .product-image {
        width: 80px;
        height: 80px;
        border-radius: 8px;
        object-fit: cover;
        margin-right: 1.5rem;
    }
    
    .product-info {
        flex-grow: 1;
    }
    
    .product-name {
        font-weight: 600;
        color: #2d3436;
        margin-bottom: 0.25rem;
    }
    
    .product-brand {
        color: #636e72;
        font-size: 0.875rem;
    }
    
    .product-price {
        text-align: right;
        min-width: 100px;
    }
    
    .price-amount {
        font-size: 1.1rem;
        font-weight: 700;
        color: #2d3436;
    }
    
    .price-quantity {
        color: #636e72;
        font-size: 0.875rem;
    }
    
    .order-summary {
        background-color: #f8f9fa;
        padding: 1.5rem;
        border-radius: 12px;
        margin-top: 2rem;
    }
    
    .summary-row {
        display: flex;
        justify-content: space-between;
        padding: 0.75rem 0;
        border-bottom: 1px solid #edf2f7;
    }
    
