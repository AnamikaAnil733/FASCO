<%- include('../partials/user/header.ejs') %>

<style>
    .success-page {
        max-width: 800px;
        margin: calc(5rem + 50px) auto 2rem;
        padding: 0 1rem;
    }

    .success-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .success-icon {
        width: 64px;
        height: 64px;
        background: #4CAF50;
        border-radius: 50%;
        margin: 0 auto 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .success-icon i {
        color: white;
        font-size: 32px;
    }

    .success-title {
        font-size: 1.75rem;
        color: #2d3748;
        margin-bottom: 0.5rem;
    }

    .success-message {
        color: #718096;
        font-size: 1rem;
    }

    .order-section {
        background: white;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .section-title {
        font-size: 1.25rem;
        color: #2d3748;
        margin-bottom: 1.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid #e2e8f0;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
    }

    .info-item {
        margin-bottom: 1rem;
    }

    .info-label {
        color: #718096;
        font-size: 0.875rem;
        margin-bottom: 0.25rem;
    }

    .info-value {
        color: #2d3748;
        font-size: 1rem;
    }

    .product-list {
        display: grid;
        gap: 1rem;
    }

    .product-item {
        display: flex;
        align-items: center;
        padding: 1rem;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
    }

    .product-image {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 4px;
        margin-right: 1rem;
    }

    .product-details {
        flex: 1;
    }

    .product-name {
        font-size: 1rem;
        color: #2d3748;
        margin-bottom: 0.5rem;
    }

    .product-meta {
        color: #718096;
        font-size: 0.875rem;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        padding: 0.75rem 0;
        color: #718096;
    }

    .total-row {
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid #e2e8f0;
        font-weight: 600;
        color: #2d3748;
    }

    .actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn {
        flex: 1;
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        font-size: 0.875rem;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.2s;
    }

    .btn-primary {
        background: #4CAF50;
        color: white;
        border: none;
    }

    .btn-primary:hover {
        background: #43A047;
    }

    .btn-secondary {
        background: #f8fafc;
        color: #2d3748;
        border: 1px solid #e2e8f0;
    }

    .btn-secondary:hover {
        background: #f1f5f9;
    }

    @media (max-width: 640px) {
        .success-page {
            margin: 1rem auto;
        }

        .actions {
            flex-direction: column;
        }

        .product-item {
            flex-direction: column;
            text-align: center;
        }

        .product-image {
            margin: 0 0 1rem 0;
        }
    }
</style>

<div class="success-page">
    <div class="success-header">
        <div class="success-icon">
            <i class="zmdi zmdi-check"></i>
        </div>
        <h1 class="success-title">Order Confirmed</h1>
        <p class="success-message">Thank you for your purchase</p>
    </div>

    <div class="order-section">
        <h2 class="section-title">Order Details</h2>
        <div class="info-grid">
            <div class="info-item">
                <div class="info-label">Order ID</div>
                <div class="info-value"><%= order.orderId %></div>
            </div>
            <div class="info-item">
                <div class="info-label">Total Amount</div>
                <div class="info-value">₹<%= order.totalAmount.toFixed(2) %></div>
            </div>
            <div class="info-item">
                <div class="info-label">Payment Method</div>
                <div class="info-value"><%= order.paymentMethod %></div>
            </div>
        </div>
    </div>

    <div class="order-section">
        <h2 class="section-title">Shipping Address</h2>
        <div class="info-grid">
            <div class="info-item">
                <div class="info-label">Name</div>
                <div class="info-value"><%= order.shippingAddress.name %></div>
            </div>
            <div class="info-item">
                <div class="info-label">Landmark</div>
                <div class="info-value"><%= order.shippingAddress.landMark %></div>
            </div>
            <div class="info-item">
                <div class="info-label">Location</div>
                <div class="info-value"><%= order.shippingAddress.city %>, <%= order.shippingAddress.state %></div>
            </div>
            <div class="info-item">
                <div class="info-label">PIN Code</div>
                <div class="info-value"><%= order.shippingAddress.pincode %></div>
            </div>
            <div class="info-item">
                <div class="info-label">Phone</div>
                <div class="info-value"><%= order.shippingAddress.phone %></div>
            </div>
            <% if (order.shippingAddress.altPhone) { %>
                <div class="info-item">
                    <div class="info-label">Alternative Phone</div>
                    <div class="info-value"><%= order.shippingAddress.altPhone %></div>
                </div>
            <% } %>
        </div>
    </div>

    <div class="order-section">
        <h2 class="section-title">Order Items</h2>
        <div class="product-list">
            <% order.items.forEach(item => { %>
                <div class="product-item">
                    <div class="item-image me-3" style="width: 100px; height: 100px;">
                        <img src="/uploads/product-images/<%= item.productId.variants[0].images[0] %>" 
                        alt="<%= item.productId.productName %>" 
                        class="img-fluid rounded"
                        style="width: 100%; height: 100%; object-fit: cover;">
                    </div>
                    <div class="product-details   d-flex flex-column align-items-end">
                        <h3 class="product-name "><%= item.productId.productName %></h3>
                        <div class="product-meta ">
                            ₹<%= item.totalPrice.toFixed(2) %> • Quantity: <%= item.quantity %>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>

        <div class="summary-row">
            <span>Subtotal</span>
            <span>₹<%= order.totalAmount.toFixed(2) %></span>
        </div>
        <div class="summary-row total-row">
            <span>Total Amount</span>
            <span>₹<%= order.totalAmount.toFixed(2) %></span>
        </div>
    </div>

    <div class="actions">
        <a href="/orders" class="btn btn-primary">View All Orders</a>
        <a href="/" class="btn btn-secondary">Continue Shopping</a>
    </div>
</div>

<%- include('../partials/user/footer.ejs') %>
